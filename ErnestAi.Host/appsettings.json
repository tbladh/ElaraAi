{
  "SystemPrompt": "You are Bob, a helpful AI assistant. You only output continuous prose, no markdown.",
  "WakeWord": {
    "WakeWord": "Bob",
    "ModelFileName": "ggml-tiny.en.bin",
    "ModelUrl": "https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-tiny.en.bin"
  },
  "SpeechToText": {
    "ModelFileName": "ggml-base.en.bin",
    "ModelUrl": "https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-base.en.bin",
    "OutputTranscriptionToConsole": true
  },
  "LanguageModels": [
    {
      "Name": "DeepSeek-7B-Ollama",
      "Provider": "ollama",
      "ServiceUrl": "http://127.0.0.1:11434",
      "ModelName": "deepseek-7b-ex:latest",
      "Priority": 2,
      "Filter": [
        "<think>.*?</think>"
      ]
    }
  ],
  "Warmup": {
    "Enabled": true,
    "DefaultIntervalSeconds": 180,
    "Providers": [
      {
        "Name": "ollama",
        "Enabled": true,
        "IntervalSeconds": 180
      }
    ]
  },
  "TextToSpeech": {
    "PreferredVoice": "Microsoft Zira Desktop"
  },
  "Acknowledgement": {
    "Enabled": true,
    "Phrase": "Yes",
    "CacheDirectory": "cache/tts",
    "PauseAfterMs": 500
  },
  "Audio": {
    "SampleRate": 16000,
    "Channels": 1
  }
}
