{
  "Segmenter": {
    "SampleRate": 16000,
    "Channels": 1,
    "FrameMs": 20,
    "EnterRms": 0.015,
    "EnterActiveRatio": 0.10,
    "ExitRms": 0.01,
    "ExitActiveRatio": 0.05,
    "EnterConsecutive": 2,
    "ExitConsecutive": 8,
    "PrependPaddingMs": 300,
    "AppendPaddingMs": 400,
    "MinSegmentMs": 500,
    "MaxSegmentMs": 12000,
    "ActiveSampleAbsThreshold": 0.02,
    "BurstEnterRms": 0.06,
    "BurstWindowMs": 500,
    "BurstMinSegmentMs": 300,
    "BurstQuietConsecutive": 4,
    "UseAdaptiveThresholds": true,
    "NoiseFloorAlpha": 0.02,
    "NoiseFloorEnterMultiplier": 3.0,
    "NoiseFloorExitMultiplier": 1.5,
    "BurstPeakAbsThreshold": 0.20,
    "EnableMetrics": true,
    "MetricsIntervalMs": 1000
  },
  "Stt": {
    "Language": "en",
    "ModelFile": "ggml-medium.en.bin",
    "ModelUrl": "https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-medium.en.bin"
  },
  "LanguageModel": {
    "Provider": "ollama",
    "BaseUrl": "http://localhost:11434",
    "ModelName": "cogito:8b",
    "SystemPrompt":  "You are {WakeWord}, a concise and helpful AI assistant built for speech to text (STT) and text to speech (TTS). Make a best effort to understand your prompt even though it may contain STT artefacts. You only output text suitable for text to speech with no markdown.",
    "OutputFilters": []
  },
  "TextToSpeech": {
    "Enabled": true,
    "Voice": "Microsoft Zira Desktop",
    "Rate": 1.0,
    "Pitch": 1.0,
    "PreambleMs": 500
  },
  "Host": {
    "WakeWord": "Margaret",
    "ProcessingSilenceSeconds": 6,
    "EndSilenceSeconds": 60,
    "AudioQueueCapacity": 16,
    "TranscriptionQueueCapacity": 64,
    "TickerIntervalMs": 200,
    "SessionRecording": {
      "EnablePrompt": true,
      "DefaultScenario": "session",
      "BaseDirectory": "SampleRuns",
      "Tolerances": { "CER": 0.25, "WER": 0.4 }
    }
  },
  "Context": {
    "EncryptionKey": ""
  },
  "Announcements": {
    "StartupTemplates": [
      "Starting Elara. Wake word: '{WakeWord}'. Model: {ModelName} at {ModelBaseUrl}. Voice: '{Voice}'. Say the wake word to begin."
    ],
    "AcknowledgeWakeWord": [
      "Yes.",
      "Listening.",
      "Go ahead.",
      "Ready.",
      "Hi."
    ],
    "AcknowledgePrompt": [
      "Hmm...",
      "Just a moment",
      "One moment.",
      "Give me a second."
    ],
    "AcknowledgeQuiescence": [
      "I'm signing out now.'",
      "Getting some rest now."
    ]
  },
  "ElaraLogging": {
    "Level": "Debug",
    "Directory": "Logs",
    "FileNamePattern": "sandbox-{date:yyyyMMdd}.log",
    "ConsoleTimestampFormat": "HH:mm:ss "
  }
}
